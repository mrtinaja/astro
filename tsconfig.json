{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs", // Si estás trabajando con Node.js, asegúrate de que sea commonjs
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Usar la resolución de módulos de Node.js

    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
